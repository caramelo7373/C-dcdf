-- Carrega a RedzHub Library v4
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/tbao143/Library-ui/refs/heads/main/Redzhubui"))()
workspace.FallenPartsDestroyHeight = -math.huge

-- Janela Principal
local Window = Library:MakeWindow({
    Title = "üçà Goiaba Hub",
    SubTitle = "Brookhaven Edition",
    LoadText = "Carregando Goiaba Hub...",
    Flags = "GoiabaHub_Main"
})

Window:AddMinimizeButton({
    Button = {
        Image = "rbxassetid://1120738435",
        BackgroundTransparency = 0
    },
    Corner = { CornerRadius = UDim.new(0, 8) }
})

-- Vari√°veis
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local selectedPlayer = nil

-- üìú Aba Info
local InfoTab = Window:MakeTab({ Title = "üìú Info", Icon = "rbxassetid://10723415903" })
InfoTab:AddSection({ "Informa√ß√µes do Hub" })
InfoTab:AddParagraph({ "Nome:", "Goiaba Hub" })
InfoTab:AddParagraph({ "Vers√£o:", "v1.0 Redz v4" })
InfoTab:AddParagraph({ "Criador:", "Goiaba Devs" })
InfoTab:AddButton({
    Name = "Rejoin",
    Callback = function()
        game:GetService("TeleportService"):TeleportToPlaceInstance(game.PlaceId, game.JobId, LocalPlayer)
    end
})

-- üé≠ Aba Troll
local TrollTab = Window:MakeTab({ Title = "üé≠ Troll", Icon = "rbxassetid://6031265976" })

-- Black Hole
TrollTab:AddButton({
    Name = "Black Hole",
    Callback = function()
        local RunService = game:GetService("RunService")
        local Workspace = game:GetService("Workspace")
        local hrp = LocalPlayer.Character:FindFirstChild("HumanoidRootPart")

        local anchor = Instance.new("Part")
        anchor.Anchored = true
        anchor.CanCollide = false
        anchor.Transparency = 1
        anchor.Parent = Workspace

        local attAnchor = Instance.new("Attachment", anchor)

        local function attachPart(part)
            if part:IsA("Part") and not part.Anchored and not part.Parent:FindFirstChild("Humanoid") then
                local attPart = Instance.new("Attachment", part)
                local align = Instance.new("AlignPosition", part)
                align.Attachment0 = attPart
                align.Attachment1 = attAnchor
                align.MaxForce = math.huge
                align.Responsiveness = 200
                part.CanCollide = false
            end
        end

        for _, v in ipairs(Workspace:GetDescendants()) do
            attachPart(v)
        end
        Workspace.DescendantAdded:Connect(attachPart)

        RunService.RenderStepped:Connect(function()
            if hrp then attAnchor.WorldCFrame = hrp.CFrame end
        end)
    end
})

-- Invis√≠vel
TrollTab:AddButton({
    Name = "Invis√≠vel (FE)",
    Callback = function()
        local args = {
            [1] = { [1] = 102344834840946, [2] = 70400527171038, [3] = 0, [4] = 0, [5] = 0, [6] = 0 }
        }
        ReplicatedStorage.Remotes.ChangeCharacterBody:InvokeServer(unpack(args))
    end
})

-- üöå Aba Fling Bus
local FlingTab = Window:MakeTab({ Title = "üöå Fling Bus", Icon = "rbxassetid://6031280882" })
FlingTab:AddButton({
    Name = "Spawnar √înibus (Fling)",
    Callback = function()
        local RE = ReplicatedStorage:WaitForChild("RE")
        RE["1Clea1rTool1s"]:FireServer("ClearAllTools")
        wait(0.3)
        RE["1Ca1r"]:FireServer("PickingCar", "SchoolBus")
    end
})

-- Inicializa GUI
Library:Init()
